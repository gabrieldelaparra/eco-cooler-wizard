@page "/counter"
@using SvgBlazor

<PageTitle>Eco Cooler Helper</PageTitle>

<SvgComponent Width="200" Height="200" @ref="svgComponent"/>

@code {

    private SvgComponent svgComponent;

    private Cooler _cooler;

    private void RenderCooler()
    {
        var circle = new SvgCircle {
            CenterX = 100,
            CenterY = 100,
            Radius = 100,
            Fill = new SvgFill {
                Color = "#FF2800"
            }
        };

        svgComponent.Add(circle);
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender) {
            loadSVG();
            RenderCooler();
        }
    }

    private void loadSVG()
    {
        _cooler = new CoolerGeneratorInches().GenerateCooler(31, 36);
    }

    protected override async Task OnInitializedAsync()
    {
    }

}